{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/exposedInMainWorld.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}